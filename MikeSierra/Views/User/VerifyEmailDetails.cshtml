@model User

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

@if (Model != null)
{
    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Mobile:</dt>
        <dd>@Model.Mobile</dd>

        <dt>Gender:</dt>
        <dd>@Model.Gender</dd>

        <dt>Hobbies:</dt>
        <dd>@string.Join(", ", Model.Hobbies)</dd>
    </dl>
}
else
{
    <p>User details not available.</p>
}
